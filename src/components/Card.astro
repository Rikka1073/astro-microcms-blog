---
type Tags = {
  name: string;
  versions: string[];
};

type Props = {
  title: string;
  tags: Tags[];
  url: string;
};

const { title, tags, url } = Astro.props;
---

<a href={url}>
  <div class="card bg-base-100 w-auto shadow-sm h-full">
    <figure>
      <img src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp" alt="Shoes" />
    </figure>
    <div class="card-body">
      <h2 class="card-title truncate">{title}</h2>
      <div class="card-actions justify-end">
        {tags.map((tag) => <div class="badge badge-outline">{tag.name}</div>)}
      </div>
    </div>
  </div>
</a>
